<Window x:Class="queziee.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ROC-Events Quiz" Height="800" Width="1200" 
        WindowState="Maximized"
        KeyDown="GameWindow_KeyDown">
    
    <Window.Resources>
        <!-- Drop Shadow Effects -->
        <DropShadowEffect x:Key="HeaderGlow" 
                          Color="#3b82f6" 
                          BlurRadius="30" 
                          ShadowDepth="0" 
                          Opacity="0.7"/>
        
        <DropShadowEffect x:Key="QuestionShadow" 
                          Color="Black" 
                          BlurRadius="20" 
                          ShadowDepth="5" 
                          Opacity="0.3"/>
        
        <DropShadowEffect x:Key="AnswerShadow" 
                          Color="Black" 
                          BlurRadius="25" 
                          ShadowDepth="8" 
                          Opacity="0.5"/>
    </Window.Resources>
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1e3a8a" Offset="0"/>
            <GradientStop Color="#1e40af" Offset="0.5"/>
            <GradientStop Color="#1e3a8a" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Quiz Name Header with Gradient and Glow -->
        <Border Grid.Row="0" Padding="20,12"
                Effect="{StaticResource HeaderGlow}">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1e40af" Offset="0"/>
                    <GradientStop Color="#3b82f6" Offset="0.5"/>
                    <GradientStop Color="#1e40af" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock x:Name="QuizNameHeader" 
                       FontSize="32" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
        
        <!-- Timer and Question Number Header with Enhanced Styling -->
        <Border Grid.Row="1" Padding="20,15" BorderThickness="0,2,0,2" BorderBrush="#60a5fa">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1e40af" Offset="0"/>
                    <GradientStop Color="#1e3a8a" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Animated Timer Display -->
                <Border Grid.Column="1" Background="#0f172a" CornerRadius="20"
                        Padding="30,12" BorderBrush="#fbbf24" BorderThickness="3">
                    <Border.Effect>
                        <DropShadowEffect Color="#f59e0b" BlurRadius="25" ShadowDepth="0" Opacity="0.7"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="TimerText" Text="30" 
                                   FontSize="48" FontWeight="Bold" Foreground="#fbbf24"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#f59e0b" BlurRadius="12" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="SECONDEN" FontSize="14" Foreground="White" FontWeight="Bold"
                                   HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>
                
                <!-- Question Number with Styling -->
                <Border Grid.Column="2" Background="#0f172a" CornerRadius="12"
                        Padding="18,10" HorizontalAlignment="Right"
                        BorderBrush="#60a5fa" BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect Color="#3b82f6" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <TextBlock x:Name="QuestionNumberText" 
                               FontSize="22" FontWeight="Bold" Foreground="White"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#3b82f6" BlurRadius="6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="40,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*" MinHeight="250"/>
            </Grid.RowDefinitions>
            
            <!-- Question Box with Enhanced Shadow and Border -->
            <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="25,15" 
                    BorderBrush="#3b82f6" BorderThickness="3"
                    Effect="{StaticResource QuestionShadow}"
                    MaxHeight="220">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="QuestionText" 
                                   FontSize="28" FontWeight="Bold" 
                                   TextAlignment="Center" TextWrapping="Wrap"
                                   Foreground="#1e40af" Margin="0,0,0,10"
                                   LineHeight="36">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#93c5fd" BlurRadius="6" ShadowDepth="2" Opacity="0.4"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        
                        <Image x:Name="QuestionImage" 
                               MaxHeight="120" MaxWidth="250"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed">
                            <Image.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="4" Opacity="0.3"/>
                            </Image.Effect>
                        </Image>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Answers Grid -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Answer A -->
                <Border Grid.Row="0" Grid.Column="0" x:Name="AnswerABorder"
                        CornerRadius="15" Padding="20"
                        BorderThickness="5" BorderBrush="#7f1d1d">
                    <Border.Background>
                        <SolidColorBrush Color="#ef4444"/>
                    </Border.Background>
                    <TextBlock x:Name="AnswerAText" 
                               FontSize="30" FontWeight="Bold" Foreground="White"
                               TextAlignment="Center" TextWrapping="Wrap"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               MaxWidth="450"/>
                </Border>
                
                <!-- Answer B -->
                <Border Grid.Row="0" Grid.Column="2" x:Name="AnswerBBorder"
                        CornerRadius="15" Padding="20"
                        BorderThickness="5" BorderBrush="#1e3a8a">
                    <Border.Background>
                        <SolidColorBrush Color="#3b82f6"/>
                    </Border.Background>
                    <TextBlock x:Name="AnswerBText" 
                               FontSize="30" FontWeight="Bold" Foreground="White"
                               TextAlignment="Center" TextWrapping="Wrap"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               MaxWidth="450"/>
                </Border>
                
                <!-- Answer C -->
                <Border Grid.Row="2" Grid.Column="0" x:Name="AnswerCBorder"
                        CornerRadius="15" Padding="20"
                        BorderThickness="5" BorderBrush="#854d0e">
                    <Border.Background>
                        <SolidColorBrush Color="#fbbf24"/>
                    </Border.Background>
                    <TextBlock x:Name="AnswerCText" 
                               FontSize="30" FontWeight="Bold" Foreground="White"
                               TextAlignment="Center" TextWrapping="Wrap"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               MaxWidth="450"/>
                </Border>
                
                <!-- Answer D -->
                <Border Grid.Row="2" Grid.Column="2" x:Name="AnswerDBorder"
                        CornerRadius="15" Padding="20"
                        BorderThickness="5" BorderBrush="#14532d">
                    <Border.Background>
                        <SolidColorBrush Color="#22c55e"/>
                    </Border.Background>
                    <TextBlock x:Name="AnswerDText" 
                               FontSize="30" FontWeight="Bold" Foreground="White"
                               TextAlignment="Center" TextWrapping="Wrap"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               MaxWidth="450"/>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Footer with Controls and Gradient -->
        <Border Grid.Row="3" Padding="25,18">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1e40af" Offset="0"/>
                    <GradientStop Color="#1e3a8a" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="PreviousButton" Content="◀ Vorige" 
                            Background="#6b7280" Foreground="White"
                            Padding="18,10" Margin="0,0,12,0" FontSize="16" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="PreviousButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>
                    <Button x:Name="NextButton" Content="Volgende ▶" 
                            Background="#059669" Foreground="White"
                            Padding="18,10" Margin="0,0,12,0" FontSize="16" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="NextButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="StartTimerButton" Content="⏱️ Start Timer" 
                            Background="#f59e0b" Foreground="White"
                            Padding="20,10" Margin="6,0" FontSize="16" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="StartTimerButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>
                    <Button x:Name="StopTimerButton" Content="⏸️ Stop Timer" 
                            Background="#dc2626" Foreground="White"
                            Padding="20,10" Margin="6,0" FontSize="16" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="StopTimerButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="#0f172a" CornerRadius="10" Padding="15,8" Margin="0,0,15,0"
                            BorderBrush="#fbbf24" BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect Color="#f59e0b" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                        <TextBlock x:Name="ModeText" Text="QUIZ MODUS" 
                                   FontSize="18" FontWeight="Bold" Foreground="#fbbf24"
                                   VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#f59e0b" BlurRadius="8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                    <Button x:Name="CloseButton" Content="❌ Sluiten" 
                            Background="#6b7280" Foreground="White"
                            Padding="18,10" FontSize="16" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>