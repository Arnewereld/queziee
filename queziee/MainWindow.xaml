<Window x:Class="queziee.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:queziee"
        mc:Ignorable="d"
        Title="ROC-Events Quiz - Operator Panel" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Panel Gradient -->
        <LinearGradientBrush x:Key="PanelGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1e293b" Offset="0"/>
            <GradientStop Color="#0f172a" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0f172a" Offset="0"/>
            <GradientStop Color="#1e293b" Offset="0.5"/>
            <GradientStop Color="#0f172a" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Gradient and Glow -->
        <Border Grid.Row="0" Padding="30,25">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1e40af" Offset="0"/>
                    <GradientStop Color="#3b82f6" Offset="0.5"/>
                    <GradientStop Color="#1e40af" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#3b82f6" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
            </Border.Effect>
            <TextBlock Text="🎮 ROC-Events Quiz Operator Panel" 
                       FontSize="32" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Quiz Selection and Control -->
            <Border Grid.Column="0" Background="{StaticResource PanelGradient}"
                    CornerRadius="15" BorderBrush="#3b82f6" BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect Color="#3b82f6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel Margin="25">
                    <TextBlock Text="📚 Quiz Selectie" FontSize="20" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#3b82f6" BlurRadius="5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <ComboBox x:Name="QuizComboBox" 
                              DisplayMemberPath="Name" 
                              Margin="0,0,0,20"
                              Padding="12,10"
                              FontSize="14"
                              Background="White"
                              SelectionChanged="QuizComboBox_SelectionChanged"/>
                    
                    <Button x:Name="StartQuizButton" Content="▶️ Start Quiz" 
                            Background="#10b981" Foreground="White"
                            Padding="18,12" FontSize="16"
                            Style="{StaticResource ModernButton}"
                            Click="StartQuizButton_Click" Margin="0,0,0,12"/>
                    
                    <Button x:Name="ManageQuestionsButton" Content="✏️ Vragen Beheren" 
                            Background="#3b82f6" Foreground="White"
                            Padding="18,12" FontSize="16"
                            Style="{StaticResource ModernButton}"
                            Click="ManageQuestionsButton_Click" Margin="0,0,0,12"/>
                    
                    <Button x:Name="OpenGameScreenButton" Content="🖥️ Open Speelscherm" 
                            Background="#f59e0b" Foreground="White"
                            Padding="18,12" FontSize="16"
                            Style="{StaticResource ModernButton}"
                            Click="OpenGameScreenButton_Click" Margin="0,0,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Right Panel - Current Quiz Info -->
            <Border Grid.Column="2" Background="{StaticResource PanelGradient}"
                    CornerRadius="15" BorderBrush="#3b82f6" BorderThickness="2">
                <Border.Effect>
                    <DropShadowEffect Color="#3b82f6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel Margin="25">
                    <TextBlock Text="📋 Quiz Informatie" FontSize="20" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,20">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#3b82f6" BlurRadius="5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <Border Background="#1e40af" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock x:Name="QuizNameText" Text="Geen quiz geselecteerd" 
                                       FontSize="18" FontWeight="Bold" 
                                       Foreground="#fbbf24" Margin="0,0,0,10">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#f59e0b" BlurRadius="8"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="QuizDescriptionText" Text="" 
                                       TextWrapping="Wrap" Margin="0,0,0,15"
                                       Foreground="#e2e8f0" FontSize="14"/>
                            <Border Background="#0f172a" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                <TextBlock x:Name="QuestionCountText" Text="" 
                                           FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                            </Border>
                            <Border Background="#0f172a" CornerRadius="6" Padding="12">
                                <TextBlock x:Name="TimePerQuestionText" Text="" 
                                           FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="📝 Vragen Preview" FontSize="16" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,15">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#3b82f6" BlurRadius="5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    
                    <Border Background="#1e40af" CornerRadius="10" Padding="15"
                            BorderBrush="#60a5fa" BorderThickness="1">
                        <ListView x:Name="QuestionsListView" Height="240" 
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Foreground="White"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#0f172a" CornerRadius="6" 
                                            Padding="12" Margin="0,4">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" 
                                                       FontWeight="Bold" 
                                                       TextWrapping="Wrap"
                                                       Foreground="White"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding CorrectAnswer, StringFormat='✅ Correct: {0}'}" 
                                                       FontSize="11" 
                                                       Foreground="#10b981"
                                                       FontWeight="SemiBold"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer with Gradient -->
        <Border Grid.Row="2" Padding="15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1e293b" Offset="0"/>
                    <GradientStop Color="#0f172a" Offset="0.5"/>
                    <GradientStop Color="#1e293b" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="🎓 ROC-Events Quiz Application - Developed for educational purposes" 
                       Foreground="#94a3b8" HorizontalAlignment="Center"
                       FontSize="12" FontWeight="SemiBold"/>
        </Border>
    </Grid>
</Window>
